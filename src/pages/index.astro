---
import Layout from "../layouts/Layout.astro";
import astroBanner from "../assets/astro-banner.jpeg";
import { Image, Picture } from "astro:assets";
---

<Layout title="Welcome to Astro.">
  <main>
    <Image src={astroBanner} alt="Astro banner" />
    <Image src={astroBanner} alt="Astro banner" width={500} height={273} />
    <Picture src={astroBanner} alt="Astro banner" formats={["avif", "webp"]} />
    <h1>Image optimization</h1>
    <a href="/post">markdown example</a>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  a,
  a:visited {
    color: white;
  }
</style>
